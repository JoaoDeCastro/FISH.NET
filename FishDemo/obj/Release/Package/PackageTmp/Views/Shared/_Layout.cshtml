<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - FISH</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">


            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FISH", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="bg-info img-rounded">@Html.ActionLink("Book Your Ride", "Create", "CustomerModels")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Join Us", "Join", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                    @*<li>@Html.ActionLink("View list of customers", "index", "CustomerModels")</li>*@

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Documents <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a target="_blank" href="~/documents/FISH OF NEW FAIRFIELD USER GUIDELINES.pdf">User Guidelines</a></li>
                            <li><a target="_blank" href="~/documents/FISH OF NEW FAIRFIELD DRIVER GUIDELINES.pdf">Driver Guidelines</a></li>
                            <li><a target="_blank" href="~/documents/Driver Application Form.pdf">Driver Application</a></li>
                            <li><a target="_blank" href="~/documents/FISH OF NEW FAIRFIELD GUIDELINES FOR TELEPHONE DUTY.pdf">Telefone Duty Guidelines</a></li>
                            <li class="divider"></li>
                            @*make the bord of directors a separate page*@


                            <li>@Html.ActionLink("Board of Directors", "About", "Home")</li>
                        </ul>
                    </li>
                    @if (User.IsInRole("Manager"))
                    {
                        <li>@Html.ActionLink("Control Panel", "Panel", "Manager")</li>
                    }
                    @if (User.IsInRole("Driver"))
                    {
                        <li>@Html.ActionLink("Control Panel", "Panel", "Driver")</li>
                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>

            @*footer section*@

            <nav class="navbar  navbar-bottom" style="padding:0 0 10px 0">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <h5 id='footer-header'> </h5>
                            <h3> FISH </h3>
                            <div class="col-sm-4" style="padding: 0 0 0 0px">
                                <p>
                                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "text-info" })
                                   
                                </p>
                                <p>
                                    @Html.ActionLink("About us", "About", "Home", new { area = "" }, new { @class = "text-info" })
                                </p>
                            </div>
                            <div class="col-sm-4" style="padding: 0 0 0 0px">
                                

                            </div>
                        </div>
                        <div class="col-sm-4">
                            <h5 id='footer-header'></h5>
                            <h3>Services</h3>
                            <p>
                                @Html.ActionLink("Book Your Ride", "Create", "CustomerModels", new { area = "" }, new { @class = "text-info" })
                            </p>
                            <p>
                                <a class="text-info" target="_blank" href="https://www.facebook.com/FISHofNewFairfield ">Facebook</a>
                            </p>
                            <p></p>
                        </div>
                        <div class="col-sm-4">
                            <h5 id='footer-header'> </h5>
                            <h3>Info</h3>
                            <p>
                                Fish of New Fairfield, Inc <br />
                                New Fairfield, CT <br />
                                Phone (203)312-5627
                            </p>
                        </div>
                    </div>
                </div>
            </nav>
            <hr />
            <p>&copy; @DateTime.Now.Year - JHC</p>

        </footer>
    
 </div>
    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
